{
    "compilerOptions": {
      "target": "es2020",
      "module": "commonjs",
      "lib": ["es2020"],
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "outDir": "./dist",
      "rootDir": "./",
      "resolveJsonModule": true,
      "moduleResolution": "node",
      "typeRoots": ["./node_modules/@types"]
    },
    "include": ["./**/*"],
    "exclude": ["node_modules", "**/*.spec.ts"]
  }
  